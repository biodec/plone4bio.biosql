<?xml version="1.0"?>
<object name="Plone4BioTopic" 
   meta_type="Factory-based Type Information"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="plone4bio">
 <property name="title" i18n:translate="">Plone4Bio Topic</property>
 <property name="description">Plone4Bio Topic</property>
 <property name="content_icon">++resource++plone4bio.biosql.images/biosqlroot.png</property>
 <property name="content_meta_type">Plone4BioTopic</property>
 <property name="product"></property>
 <property name="factory">plone4bio.biosql.Plone4BioTopic</property>
 <property name="immediate_view">atct_topic_view</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types" />
 <property name="allow_discussion">False</property>
 <property name="default_view">@@view</property>
 <property name="view_methods">
   <!--	
   <element value="folder_listing"/>
   <element value="folder_summary_view"/>
   <element value="folder_tabular_view"/>
   <element value="atct_album_view"/>
   <element value="atct_topic_view"/>
   <element value="folder_contents_view"/>
   <element value="criteria_form"/>
   <element value="grouped_listing"/>
   <element value="drilldown_listing"/>
   <element value="grouped_listing"/> 
   -->
   <element value="@@view"/>
 </property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="atct_edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>
 <alias from="criterion_edit_form" to="p4b_criterion_edit_form"/>
 <alias from="atct_topic_view" to="@@view"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${folder_url}/" visible="True"
    i18n:attributes="title">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
    url_expr="string:${object_url}/edit" visible="True"
    i18n:attributes="title">
  <permission value="Change portal topics"/>
 </action>
 <action title="References" action_id="references" category="object"
    condition_expr="object/archetype_tool/has_graphviz"
    url_expr="string:${object_url}/reference_graph" visible="True"
    i18n:attributes="title">
  <permission value="Modify portal content"/>
  <permission value="Review portal content"/>
 </action>
 <action title="Criteria" action_id="criteria" category="object"
    condition_expr="" url_expr="string:${folder_url}/p4b_criterion_edit_form"
    visible="True" i18n:attributes="title">
  <permission value="Change portal topics"/>
 </action>
 <action title="Criteria" action_id="criteria" category="object"
    condition_expr="" url_expr="string:${folder_url}/criterion_edit_form"
    visible="True" i18n:attributes="title">
  <permission value="Change portal topics"/>
 </action>
 <action title="Subfolders" action_id="subtopics" category="object"
    condition_expr="" url_expr="string:${folder_url}/atct_topic_subtopics"
    visible="True" i18n:attributes="title">
  <permission value="Change portal topics"/>
 </action>
</object>
